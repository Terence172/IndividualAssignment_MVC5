@model IndividualAssignment_MVC5.Models.comem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Home/LayoutDashboard.cshtml";
}



<div class="page-header">
    <div class="row">

        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Committee Member - Create Committee Member</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("DashboardAdmin", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "comems")">Committee Member List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Create Committee Member
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>



<!-- basic table  Start -->
<div class="pd-20 card-box mb-30">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="clearfix mb-20">
            <div class="pull-left">
                <h4 class="text-blue h4">Create Committee Member Form</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Variable</th>
                    <th scope="col">Content</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <th scope="row">Lecturer</th>
                    <td>
                        @Html.DropDownList("lect_id", null, htmlAttributes: new { @class = "form-control", @required = "", @placeholder = "Select a Lecturer" })
                        @Html.ValidationMessageFor(model => model.lect_id, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th scope="row">Academic Program</th>
                    <td>
                        @Html.DropDownList("prog_id", null, htmlAttributes: new { @class = "form-control", @placeholder = "Select a Academic Programme", @required = "" })
                        @Html.ValidationMessageFor(model => model.prog_id, "", new { @class = "text-danger" })
                    </td>
                </tr>

            </tbody>
        </table>

        <div class="card card-box text-center">
            <div class="card-body">
                <h5 class="card-title">Actions :</h5>
                <p class="card-text">Choose Carefully :P</p>

                <a class="btn btn-info" data-toggle="modal" data-target="#confirmation-modal" role="button">
                    Submit
                </a>

                <a class="btn btn-outline-warning" href="@Url.Action("Index", "comems")" role="button">
                    Cancel
                </a>
            </div>
        </div>

        <div class="modal fade" id="confirmation-modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body text-center font-18">
                        <h4 class="padding-top-30 mb-30 weight-500">Are you sure you want to create this Committee Member?</h4>
                        <h5 class="mb-30 weight-500">A comittee member with this lecturer credentials will be created</h5>
                        <div class="padding-bottom-30 row" style="max-width: 170px; margin: 0 auto;">
                            <div class="col-6">
                                <button type="button" class="btn btn-secondary border-radius-100 btn-block confirmation-btn" data-dismiss="modal"><i class="fa fa-times"></i></button>
                                NO
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary border-radius-100 btn-block confirmation-btn">
                                    <i class="fa fa-check"></i>
                                </button>
                                YES
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>