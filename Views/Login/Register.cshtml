@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="col-md-6">
            <fieldset>
                @Html.EditorFor(model => model.user_firstname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your First Name", @required = "" } })
                @Html.ValidationMessageFor(model => model.user_firstname, "", new { @class = "text-danger" })
            </fieldset>
        </div>
        <div class="col-md-6">
            <fieldset>
                @Html.EditorFor(model => model.user_lastname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Last Name", @required = "" } })
                @Html.ValidationMessageFor(model => model.user_lastname, "", new { @class = "text-danger" })
            </fieldset>
        </div>

        <div class="col-md-6">
            <fieldset>
                @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Password Name", @required = "" } })
                @Html.ValidationMessageFor(model => model.user_lastname, "", new { @class = "text-danger" })
            </fieldset>
        </div>

        <tr>
            <th scope="row">Email : Student</th>
            <td>
                @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email of Student Goes Here", @type = "email", @required = "" } })
                @Html.ValidationMessageFor(model => model.user_email, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <th scope="row">Username : Student</th>
            <td>
                @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username of Student Goes Here", @required = "" } })
                @Html.ValidationMessageFor(model => model.user_name, "", new { @class = "text-danger" })
            </td>
        </tr>




        <tr>
            <th scope="row">Student Faculty</th>
            <td>
                @Html.EditorFor(model => model.students.First().stu_faculty, new { htmlAttributes = new { @class = "form-control", @placeholder = "Student Faculty Goes Here", @type = "text", @required = "" } })
                @Html.ValidationMessageFor(model => model.students.First().stu_faculty, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <th scope="row">Student School</th>
            <td>
                @Html.EditorFor(model => model.students.First().stu_school, new { htmlAttributes = new { @class = "form-control", @placeholder = "Student School Goes Here", @type = "text", @required = "" } })
                @Html.ValidationMessageFor(model => model.students.First().stu_school, "", new { @class = "text-danger" })
            </td>
        </tr>


        <div class="form-group">
            @Html.LabelFor(model => model.students.First().prog_id, "Academic Programme", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.students.First().prog_id, ViewBag.prog_id as SelectList, "Select your Academic Programme", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.students.First().prog_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.students.First().stu_pref_sup_ID, "Preferred Supervisor", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.students.First().stu_pref_sup_ID, ViewBag.stu_pref_sup_ID as SelectList, "Select your Preferred Supervisor", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.students.First().stu_pref_sup_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}