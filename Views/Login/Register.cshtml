
@model IndividualAssignment_MVC5.Models.user

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<section class="section video" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 align-self-center">
                <div class="left-content">
                    <h4>Watch the video to learn more <em>about life at UTM</em></h4>
                    <p>
                        <b> All credits for the video goes to <a rel="nofollow" href="https://www.youtube.com/janebujo" target="_parent">janebujo</a>.</b>
                    </p>
                    <div class="main-button"><a rel="nofollow" href="@Url.Action("Index", "Home")" target="_parent">Home Page</a></div>
                </div>
            </div>
            <div class="col-md-6">
                <article class="video-item">
                    <div class="video-caption">
                        <h4>Power HTML Template</h4>
                    </div>
                    <figure>
                        <a href="https://www.youtube.com/watch?v=GUIwXBdzeTw" class="play"><img src="~/Content/assets/src/images/video-thumb-01.jpg"></a>
                    </figure>
                </article>
            </div>
        </div>
    </div>
</section>

<section class="section contact" data-section="section6">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Register into our system</h2>
                </div>
            </div>
            <div class="col-md-6 form-column">

                <!-- Do you need a working HTML contact-form script?

                Please visit https://templatemo.com/contact page -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                        <div class="row">

                            <div class="col-md-6">
                                <fieldset>
                                    @Html.EditorFor(model => model.user_firstname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your First Name", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.user_firstname, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-6">
                                <fieldset>
                                    @Html.EditorFor(model => model.user_lastname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Last Name", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.user_lastname, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>

                                    @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Username to Login", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.user_name, "", new { @class = "text-danger" })

                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>
                                    @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Email", @type = "email", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.user_email, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-6">

                                <fieldset>
                                    @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "form-control", @id = "password", @placeholder = "Your Password", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.user_lastname, "", new { @class = "text-danger" })
                                </fieldset>

                            </div>

                            <div class="col-md-6">
                                <fieldset>
                                    <input name="user_passwordConfirm" type="password" class="form-control" id="passwordConfirm" placeholder="Confirm your Password" required="">
                                </fieldset>
                            </div>

                            <div class="col-md-6">
                                <fieldset>
                                    @Html.EditorFor(model => model.students.First().stu_faculty, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your Faculty", @type = "text", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.students.First().stu_faculty, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-6">
                                <fieldset>
                                    @Html.EditorFor(model => model.students.First().stu_school, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your School", @type = "text", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.students.First().stu_school, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>

                                    @Html.DropDownListFor(model => model.students.First().prog_id, ViewBag.prog_id as SelectList, "Select your Academic Programme", new { @class = "form-control", @required = "" })
                                    @Html.ValidationMessageFor(model => model.students.First().prog_id, "", new { @class = "text-danger" })

                                </fieldset>
                            </div>


                            <div class="col-md-12">
                                <fieldset>
                                    @Html.DropDownListFor(model => model.students.First().stu_pref_sup_ID, ViewBag.stu_pref_sup_ID as SelectList, "Select your Preferred Supervisor", new { @class = "form-control", @required = "" })
                                    @Html.ValidationMessageFor(model => model.students.First().stu_pref_sup_ID, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>
                                    <button type="submit" value="Create" id="form-submit" class="button">Register Now</button>
                                </fieldset>
                            </div>
                        </div>
                }

                </div>
            <div class="col-md-6 map-column">
                <div id="map">
                    <h4>Hello there student, Welcome to <em>FYP1 System</em>!</h4>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.3424442256937!2d103.635241975907!3d1.558473460867803!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31da7154a58c424b%3A0x8c133d77584b5ff8!2sUniversiti%20Teknologi%20Malaysia!5e0!3m2!1sen!2smy!4v1688426794117!5m2!1sen!2smy" width="100%" height="422px" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</section>



@section scripts {
    <script>

        // Get references to the password and confirm password fields
        var passwordField = document.getElementById("password");
        var passwordConfirmField = document.getElementById("passwordConfirm");

        // Function to validate the password fields
        function validatePasswords() {
            var password = passwordField.value;
            var passwordConfirm = passwordConfirmField.value;

            if (password !== passwordConfirm) {
                passwordConfirmField.setCustomValidity("Passwords do not match");
            } else {
                passwordConfirmField.setCustomValidity("");
            }
        }

        // Add an event listener to the confirm password field
        passwordConfirmField.addEventListener("input", validatePasswords);

    </script>
}

