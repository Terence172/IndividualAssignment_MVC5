@model IEnumerable<IndividualAssignment_MVC5.Models.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/LayoutDashboard.cshtml";
}

<div class="page-header">
    <div class="row">

        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Lecturers - View</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("DashboardAdmin", "Home")">Home</a></li>
                    <li class="breadcrumb-item">Manage Lecturers</li>
                    <li class="breadcrumb-item active" aria-current="page">Lecturers</li>
                </ol>
            </nav>
        </div>
    </div>
</div>


<div class="pd-20 card-box mb-30">
    <div class="clearfix mb-20">
        <div class="pull-left">
            <h4 class="text-blue h4">Lecturers</h4>
            <p>Lecturers registered to the <code>.system</code> :P</p>
        </div>
        <div class="pull-right">
            <a href="@Url.Action("Create", "lecturer")" class="btn btn-primary btn-sm scroll-click" role="button">
                <i class="icon-copy fi-torso-business"></i> Create Lecturer
            </a>
        </div>
    </div>
    <div class="pb-20">
        <table class="table">
            <thead>
                <tr>
                    <th class="table-plus datatable-nosort">Lecturer Username</th>
                    <th>Name</th>
                    <th>Faculty</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    if (item.lecturers.Any())
                    {

                        <tr>
                            <td class="table-plus">
                                <span>@Html.DisplayFor(modelItem => item.user_name)</span>
                            </td>

                            <td>@Html.DisplayFor(modelItem => item.user_firstname) @Html.DisplayFor(modelItem => item.user_lastname)</td>
                            <td>@Html.DisplayFor(modelItem => item.lecturers.First().lect_faculty)</td>
                            <td>
                                <div class="dropdown">
                                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                        <i class="dw dw-more"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                        <a class="dropdown-item" href="@Url.Action("Details", "lecturer", new { id = item.user_id })">
                                            <i class="dw dw-eye"></i> View
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Edit", "lecturer", new { id = item.user_id })">
                                            <i class="dw dw-edit2"></i> Edit
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "lecturer", new { id = item.user_id })">
                                            <i class="dw dw-delete-3"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
