@model IndividualAssignment_MVC5.Models.programme

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Home/LayoutDashboard.cshtml";
}

<div class="page-header">
    <div class="row">

        <div class="col-md-6 col-sm-12">
            <div class="title">
                <h4>Programmes - View</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("DashboardAdmin", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "programmes")">Programme List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        View Programme - <span>@Html.DisplayFor(model => model.prog_name)</span>
                    </li>
                </ol>
            </nav>
        </div>

        <div class="col-md-6 col-sm-12 text-right">
            <div class="dropdown">
                <a class="btn btn-primary" href="@Url.Action("Create", "programmes")" role="button">
                    Create Programme
                </a>
            </div>
        </div>
    </div>
</div>

<!-- basic table  Start -->
<div class="pd-20 card-box mb-30">

    <div class="clearfix mb-20">
        <div class="pull-left">
            <h4 class="text-blue h4">Programme Credentials</h4>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Variable</th>
                <th scope="col">Content</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Programme Name</th>
                <td>@Html.DisplayFor(model => model.prog_name)</td>
            </tr>
            <tr>
                <th scope="row">Programme Code</th>
                <td>@Html.DisplayFor(model => model.prog_code)</td>
            </tr>
            <tr>
                <th scope="row">Programme Students</th>
                <td>@Model.students.Count()</td>
            </tr>
        </tbody>
    </table>

    <div class="card card-box text-center">
        <div class="card-body">
            <h5 class="card-title">Actions :</h5>
            <p class="card-text">Choose Carefully :P</p>
            @Html.ActionLink("Edit this Programme", "Edit", new { id = Model.prog_id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to List", "Index", new { id = Model.prog_id }, new { @class = "btn btn-primary" })
        </div>
    </div>


</div>